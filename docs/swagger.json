{
    "swagger": "2.0",
    "info": {
        "description": "Simple transactions API to handle CSV files and Emails.",
        "title": "Personal Transactions API",
        "contact": {
            "url": "http://www.swagger.io/support",
            "email": "davidasb.developer@gmail.com"
        },
        "license": {
            "name": "license(Mandatory)",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "version(1.0)"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/create-account/": {
            "post": {
                "description": "creates an account based in email and full name",
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "description": "Email",
                        "name": "email",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "description": "Full name",
                        "name": "name",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "status\": 200, message: \"Account created\", data: models.Account{}}",
                        "schema": {
                            "$ref": "#/definitions/gin.H"
                        }
                    }
                }
            }
        },
        "/send-email/": {
            "post": {
                "description": "Sends an email from an account",
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "type": "string",
                        "description": "Email",
                        "name": "email",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "message\": \"Email sent\"}",
                        "schema": {
                            "$ref": "#/definitions/gin.H"
                        }
                    }
                }
            }
        },
        "/upload-transactions/": {
            "post": {
                "description": "Adds transactions to the database from a csv file",
                "consumes": [
                    "multipart/form-data"
                ],
                "parameters": [
                    {
                        "type": "file",
                        "description": "transactions",
                        "name": "transactions",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "account_id",
                        "name": "account_id",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "message\": \"Transactions successfully uploaded and saved.\"}",
                        "schema": {
                            "$ref": "#/definitions/gin.H"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "gin.H": {
            "type": "object",
            "additionalProperties": true
        }
    }
}